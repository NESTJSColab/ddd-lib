{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nestjscolab/ddd": ["libs/ddd/src/index.ts"],
      "@nestjscolab/ddd-eb": ["libs/ddd-eb/src/index.ts"],
      "@nestjscolab/ddd-es": ["libs/ddd-es/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
